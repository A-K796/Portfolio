<div class="container">
  <div class="row">
<!--ジャンル一覧-->
    <%= render 'homes/genrebox', genres: @genres %>
    <div class="col-xs-9">

<!--サイト説明-->
      <p>ようこそ、<strong>Movies</strong>へ！<br>
          このサイトはおすすめ映画の投稿サイトとなっています<br>
      </p>

<!--映画一覧表示-->
      <div class="row">
        <h3>新しい投稿</h3>
        <p class="text-right"><%= link_to "もっとみる", movies_path %></p>
        <% @movies.each do |movie| %>
        <div class="col-md-3">
          <%= link_to movie_path(movie) do %>
          <%= attachment_image_tag movie, :image, size: "200x200", fallback: "no_image.jpg" %>
          <%= movie.title %>
          <% end %>
        </div>
        <% end %>
      </div>

      <div class="row">
        <h3>おすすめ映画</h3>
        <% @all_ranks.each do |movie| %>
        <div class="col-md-3">
          <%= link_to movie_path(movie) do %>
          <%= attachment_image_tag movie, :image, size: "200x200", fallback: "no_image.jpg" %>
          <%= movie.title %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>