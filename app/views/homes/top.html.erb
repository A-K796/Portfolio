<body>
  <div>
    <%= render 'homes/genrebox', genres: @genres %>
  </div>
  <%= link_to "一覧へ", movies_path %>
  <table class="table">
    <tbody>
      <% @movies.each do |movie| %>
      <tr>
        <%= link_to movie_path(movie) do %>
        <%= attachment_image_tag movie, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <%= movie.title %>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</body>